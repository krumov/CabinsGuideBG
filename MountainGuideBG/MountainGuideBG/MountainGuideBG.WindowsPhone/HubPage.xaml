                    </ListView>
                </DataTemplate>
            </HubSection>-->
        </Hub>
        <ProgressRing x:Name="LoadingBar" Background="Transparent" Visibility="Collapsed" IsActive="False" Foreground="GreenYellow" IsEnabled="True" Height="4" HorizontalAlignment="Stretch" />
    </Grid>

</Page>